@page
@{
    var menus = await Repository.GetAllAsync();
}
@section Title {
    <div class="alert alert-success title" role="alert">
        <h2>Menu Selection</h2>
    </div>

   
}

<div class="row Menus">
    @foreach (var menu in menus)
    {
        <div class="Menu col-md-4">
            <img class="img img-thumbnail" src="@menu.GetInlineImageSrc()" />
            <h3><a asp-page="/Menu" asp-route-id="@menu.Id">@menu.Name</a></h3>
            <p>@menu.Description</p>
        </div>
    }
</div>
